<Window x:Class="Lista3.PersonProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lista3"
        mc:Ignorable="d"
        Title="PersonProperties" Height="450" Width="800">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock Text="View person properties" FontSize="25" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Name:"/>
        <TextBox Margin="0,0,0,10"/>

        <TextBlock Text="Surname:"/>
        <TextBox Margin="0,0,0,10"/>

        <TextBlock Text="Personal number:"/>
        <TextBox Margin="0,0,0,10"/>

        <Button Content="Ok" Width="100" HorizontalAlignment="Center" Margin="0,10,0,0" />
    </StackPanel>
</Window>
