<Window x:Class="MaciejKloda_140054.StudentDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaciejKloda_140054"
        mc:Ignorable="d"
        Title="StudentDatabase" MinHeight="450" MinWidth="500" Height="450" Width="500">
        <StackPanel>
         <StackPanel Margin="10">
            <Label Content="Name:"/>
            <TextBox Height="30"/>
        </StackPanel>
        <StackPanel Margin="10">
            <Label Content="Surname:"/>
            <TextBox Height="30"/>
        </StackPanel>
        <StackPanel Margin="10">
            <Label Content="Date of birth:"/>
            <TextBox Height="30"/>
        </StackPanel>
        <StackPanel Margin="10">
            <Label Content="Term:"/>
            <TextBox Height="30"/>
        </StackPanel>
        <Button Width="100" Height="50" Content="Submit"/>
    </StackPanel>
</Window>
