<Window x:Class="MaciejKloda_140054.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MaciejKloda_140054"
        mc:Ignorable="d"
        Title="DockPanel" MinHeight="450" MinWidth="500" Height="450" Width="500">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Height="50">Bottom</Button>
        <Button DockPanel.Dock="Left" Width="50">Left</Button>
        <Button DockPanel.Dock="Right" Width="50">Right</Button>

        <Button DockPanel.Dock="Top"  Background="Red" Height="100">Top</Button>
        <Button DockPanel.Dock="Top" Background="green" Width="150" Height="150">Top2</Button>
        <Button DockPanel.Dock="Right" Height="75" Width="100">Right2</Button>
        <Button DockPanel.Dock="Right" Height="75" Width="100">Right3</Button>
        <Button DockPanel.Dock="Top" Background="blue" Height="50" >Top3</Button>

        <Button>Fill</Button>
        
       
        
    </DockPanel>
</Window>
